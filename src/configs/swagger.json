{
  "swagger": "2.0",
  "info": {
    "description": "Patient/Electronic Medical Record Management API",
    "version": "1.0.0",
    "title": "Medical Server"
  },
  "host": "localhost:3000",
  "basePath": "/v1",
  "tags": [
    {
      "name": "Patients",
      "description": "Patients management"
    },
    {
      "name": "Medical Consultations",
      "description": "Medicals consultations management"
    },
    {
      "name": "Medics",
      "description": "Medics management"
    }
  ],
  "schemes": [
    "https"
  ],
  "paths": {
    "/patients": {
      "post": {
        "tags": ["Patients"],
        "summary": "Add a new patient",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Patient"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "405": {
            "description": "Invalid input"
          }
        }
      },
      "put": {
        "tags": ["Patients"],
        "summary": "Update a patient",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Patient"
            }
          }
        ],
        "responses": {
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Patient not found"
          },
          "405": {
            "description": "Validation exception"
          }
        }
      }
    },
    "/patients/{status}": {
      "get": {
        "tags": ["Patients"],
        "summary": "Find patients by status",
        "parameters": [
          {
            "name": "status",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/Patient"
            }
          },
          "400": {
            "description": "Invalid status value"
          },
          "404": {
            "description": "Patient not found"
          }
        }
      }
    },
    "/patients/{patientId}": {
      "get": {
        "tags": ["Patients"],
        "summary": "Find patient by ID",
        "parameters": [
          {
            "name": "patientId",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/Patient"
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Patient not found"
          }
        }
      },
      "delete": {
        "tags": ["Patients"],
        "summary": "Deletes a patient",
        "parameters": [
          {
            "name": "patientId",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Patient not found"
          }
        }
      }
    },
    "/consultations": {
      "post": {
        "tags": ["Medical Consultations"],
        "summary": "Place a consultation for patient",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Consultation"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "400": {
            "description": "Invalid consultation"
          }
        }
      }
    },
    "/consultations/{consultationId}": {
      "get": {
        "tags": ["Medical Consultations"],
        "summary": "Find consultation by ID",
        "parameters": [
          {
            "name": "consultationId",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/Consultation"
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Consultation not found"
          }
        }
      },
      "delete": {
        "tags": ["Medical Consultations"],
        "summary": "Deletes a consult",
        "parameters": [
          {
            "name": "consultationId",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Consultation not found"
          }
        }
      }
    },
    "/medics": {
      "post": {
        "tags": ["Medics"],
        "summary": "Add a new medic",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Medic"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "405": {
            "description": "Invalid input"
          }
        }
      },
      "put": {
        "tags": ["Medics"],
        "summary": "Update a medic",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Medic"
            }
          }
        ],
        "responses": {
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Medic not found"
          },
          "405": {
            "description": "Validation exception"
          }
        }
      }
    },
    "/medics/{medicId}": {
      "get": {
        "tags": ["Medics"],
        "summary": "Find medic by ID",
        "parameters": [
          {
            "name": "medicId",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/Medic"
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Medic not found"
          }
        }
      },
      "delete": {
        "tags": ["Medics"],
        "summary": "Deletes a medic",
        "parameters": [
          {
            "name": "medicId",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Medic not found"
          }
        }
      }
    }
  },
  "definitions": {
    "Patient": {
      "type": "object",
      "properties": {
        "patientId": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "birthDate": {
          "type": "string",
          "format": "date"
        },
        "bloodType": {
          "type": "string"
        },
        "emergencyContact": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/EmergencyContact"
          }
        },
        "lastPhysicalExaminationDate": {
          "type": "string",
          "format": "date"
        },
        "diseases": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "medications": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "notes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "type": "string"
        }
      }
    },
    "EmergencyContact": {
      "type": "object",
      "properties": {
        "relation": {
          "type": "string"
        },
        "phoneNumber": {
          "type": "string"
        }
      }
    },
    "Consultation": {
      "type": "object",
      "properties": {
        "consultationId": {
          "type": "integer",
          "format": "int64"
        },
        "patientId": {
          "type": "integer",
          "format": "int64"
        },
        "medicId": {
          "type": "integer",
          "format": "int64"
        },
        "status": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "completed": {
          "type": "boolean"
        }
      }
    },
    "Medic": {
      "type": "object",
      "properties": {
        "medicId": {
          "type": "integer",
          "format": "int64"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    }
  }
}